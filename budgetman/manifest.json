{
    "manifest_version": 2,
    "name": "Budget Manager",
    "version": "1.0",
    "description": "This ext tracks your overall spendings",
    "icons": {
        "128": "icon128.png",
        "64": "icon64.png",
        "16": "icon16.png"
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "permissions": [
        "storage",
        "contextMenus",
        "notifications"
    ]
}